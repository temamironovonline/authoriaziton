<Window x:Class="authoriaziton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:authoriaziton"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин"></TextBlock>
            <TextBox Name="inputLogin" Width="200"></TextBox>
            <TextBlock Text="Пароль"></TextBlock>
            <PasswordBox Name="inputPassword" Width="200"></PasswordBox>
            <Button Name="signIn" Content="Войти" Margin="0,10,0,0" Click="signIn_Click"></Button>
            <TextBlock Name="newCodeTimer" Visibility="Collapsed"></TextBlock>
            <Button Name="getNewCode" Content="Получить новый код" Visibility="Collapsed"></Button>
        </StackPanel>
    </Grid>
</Window>
