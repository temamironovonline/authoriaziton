<Window x:Class="authoriaziton.CapthcaFieldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:authoriaziton"
        mc:Ignorable="d"
        Title="CapthcaFieldWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Canvas Name="can" Background="Aquamarine" Width="250" Height="150" ClipToBounds="True">
            
            </Canvas>
            <TextBlock Text="Введите капчу"></TextBlock>
            <TextBox Name="inputCaptchaField"></TextBox>
            <Button Name="acceptInputCaptcha" Content="Подтвердить" Click="acceptInputCaptcha_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
